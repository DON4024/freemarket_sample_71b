%h2 住所情報登録
= form_for @address do |f|
  = render "devise/shared/error_messages", resource: @address
  .field
    = f.label :"郵便番号"
    %br/
    = f.text_field :postcode, autofocus: true
  .field
    = f.label :"都道府県"
    %br/
    = f.collection_select :prefecture_id, Prefecture.find[1..47] :id, :name
    -# = f.text_field :prefecture, autofocus: true
  .field
    = f.label :"市区町村"
    %br/
    = f.text_field :city, autofocus: true
  .field
    = f.label :"番地"
    %br/
    = f.text_field :address, autofocus: true
  .field
    = f.label :"建物名"
    %br/
    = f.text_field :address2, autofocus: true
  .field
    = f.label :"電話番号"
    %br/
    = f.text_field :tel, autofocus: true
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
