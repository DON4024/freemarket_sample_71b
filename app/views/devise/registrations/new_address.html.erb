<h2>住所情報登録</h2>

<%= form_for @address do |f| %>
  <%= render "devise/shared/error_messages", resource: @address %>

  <div class="field">
    <%= f.label :"郵便番号"%><br />
    <%= f.text_field :postcode, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"都道府県"%><br />
    <%= f.text_field :prefecture, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"市区町村"%><br />
    <%= f.text_field :city, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"番地"%><br />
    <%= f.text_field :address, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label :"建物名"%><br />
    <%= f.text_field :address2, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"電話番号"%><br />
    <%= f.text_field :tel, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>