.buy-page
  .buy-page__header
    .buy-page__header__logo
      =link_to root_path do
        =image_tag "material/logo/logo.png"
      .buy-page__content
        .buy-page__content__main
          .buy-page__content__main__header
            %h3 購入内容の確認
          .buy-page__content__main__inner
            .buy-page__content__main__item
              .buy-page__content__main__item__buy-img
                =image_tag "material/syouhin.jpeg"
              .buy-page__content__main__item__buy-name
                %p.link_to=@product.name
                .buy-page__content__main__item__price
          .buy-page__content__main__inner
            .buy-page__content__main__payment
              .buy-page__content__main__payment-amount
                支払い金額
              .buy-page__content__main__payment-money
                %h3
                = "¥ #{@product.price}"
          .buy-page__content__main__inner
            .buy-page__content__main__credit
              %h3 支払い方法
              - if @default_card_information.blank?
                %br /
              - else
                -#以下カード情報を表示
                = "**** **** **** " + @default_card_information.last4
                - exp_month = @default_card_information.exp_month.to_s
                - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                = exp_month + " / " + exp_year
              %br
              .buy-page__content__main__credit__list
                クレジットカード
                .buy-page__content__main__credit__list__number
                  **** **** 1111
                .buy-page__content__main__credit__list__number
                  有効期限 3/20
                .buy-page__content__main__credit__list__img
                  =image_tag "card-img.jpeg"
          .buy-page__content__main__inner
            .buy-page__content__main__shipping-address
              %h3 配送先
              .buy-user-info-text
                〒111-1111
                %br
                大阪府
                大阪市
                中央区難波5-1-60
                なんばスカイオ
                %br
                山田
                太郎
          %br
          = form_tag(action: :pay, method: :post) do
            %button 購入する
            
              

      .buy-page__footer
        %ul
          %li.buy-page__footer__terms
            =link_to "#" do
              プライバシーポリシー
          %li.buy-page__footer__terms
            =link_to "#" do
              FURIMA利用規約
          %li.buy-page__footer__terms
            =link_to "#" do
              特定商取引に関する表記
        .buy-page__footer__logo
          =image_tag "material/logo/logo-white.png"
          %p ©️FURIMA

      